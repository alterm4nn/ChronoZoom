@model IEnumerable<Authoring.WebRole.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Users - Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
         <th></th>
       <th>
            UserName
        </th>
        <th>
            Password
        </th>
        <th>
            FirstName
        </th>
        <th>
            LastName
        </th>
        <th>
            EmailAddress
        </th>
        <th>
            Role
        </th>
        <th>
            CreatedBy
        </th>
        <th>
            CreatedOn
        </th>
        <th>
            ModifiedBy
        </th>
        <th>
            ModifiedOn
        </th>
        <th>
