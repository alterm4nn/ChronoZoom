<UserControl x:Class="ThumbGen.ContentItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" >
    <Grid Background="Black">
        <StackPanel Margin="10">
            <Label Margin="5" Name="title" FontSize="28" FontFamily="Times New Roman" HorizontalContentAlignment="Center" Foreground="White"/>
            <Image Margin="5"  x:Name="image" Height="Auto" Stretch="UniformToFill"/>
            <!--<WebBrowser Name="browser" Height="auto" Width="auto"/>-->
            <TextBlock Margin="5" Name="description" FontFamily="Times New Roman" FontSize="14" TextWrapping="Wrap" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>
